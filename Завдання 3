def split_list():
    # Користувач вводить список чисел (можна і рядки, якщо хочете)
    elements = input("Введіть елементи списку через пробіл: ").split()
    
    # Введення позиції для розбиття
    index = int(input("Введіть номер елемента для розбиття: "))
    
    # Перевірка коректності індексу
    if index < 0 or index > len(elements):
        print("Помилка: індекс виходить за межі списку!")
        return
    
    # Розбиття списку
    list1 = elements[:index]
    list2 = elements[index:]
    
    # Вивід результату
    print("Перший список:", list1)
    print("Другий список:", list2)

# Виклик функції
split_list()
